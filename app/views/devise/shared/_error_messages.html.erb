<% if resource.errors.any? %>
  <div id="error_explanation" class="error-messages" data-turbo-cache="false">
    <h2 class="error-heading">
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>
    <ul class="error-list">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<style type="text/css">
  /* Error Messages Styling */
.error-messages {
  background-color: #f8d7da; /* Light red background */
  color: #721c24; /* Dark red text */
  border: 1px solid #f5c6cb; /* Red border */
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 20px;
}

.error-heading {
  font-family: 'Public Sans', sans-serif;
  font-size: 18px;
  font-weight: 700;
  margin-bottom: 10px;
}

.error-list {
  list-style-type: none;
  padding: 0;
}

.error-list li {
  font-family: 'Public Sans', sans-serif;
  font-size: 14px;
  color: #721c24;
  margin-bottom: 5px;
  padding-left: 10px;
  position: relative;
}

.error-list li:before {
  content: "•";
  color: #f5c6cb;
  position: absolute;
  left: 0;
  top: 0;
}

.flash-alert {
  background-color: #f8d7da; /* Light red background */
  color: #721c24; /* Dark red text */
  border: 1px solid #f5c6cb; /* Red border */
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 20px;
}

.flash-alert h2 {
  font-family: 'Public Sans', sans-serif;
  font-size: 18px;
  font-weight: 700;
  margin-bottom: 10px;
}

.flash-alert .error-list {
  list-style-type: none;
  padding: 0;
}

.flash-alert .error-list li {
  font-family: 'Public Sans', sans-serif;
  font-size: 14px;
  color: #721c24;
  margin-bottom: 5px;
  padding-left: 10px;
  position: relative;
}

.flash-alert .error-list li:before {
  content: "•";
  color: #f5c6cb;
  position: absolute;
  left: 0;
  top: 0;
}

</style>