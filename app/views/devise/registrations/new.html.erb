.signup-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(123.24deg, #91309c, #321136);
}

.signup-form {
  width: 100%;
  max-width: 400px;
  padding: 40px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0px 8px 32px rgba(0, 0, 0, 0.1);
  text-align: left;
}

.signup-form h2 {
  text-align: center;
  font-family: 'Inknut Antiqua', serif;
  font-size: 36px;
  font-weight: 900;
  color: #571f59;
  margin-bottom: 24px;
}

.signup-form .field {
  margin-bottom: 20px;
}

.signup-form label {
  display: block;
  font-family: 'Public Sans', sans-serif;
  font-size: 16px;
  font-weight: 600;
  color: #321136;
  margin-bottom: 8px;
}

.password-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: 'Public Sans', sans-serif;
  font-size: 16px;
  font-weight: 600;
  color: #321136;
}

.password-label em {
  font-size: 14px;
  color: #77878f;
  margin-left: 8px;
}

.signup-form input[type="email"],
.signup-form input[type="password"] {
  width: 100%;
  padding: 12px;
  border: 1px solid #dbdbdb;
  border-radius: 4px;
  font-size: 16px;
  color: #191c1f;
}

.signup-form .actions input[type="submit"] {
  width: 100%;
  background-color: #571f59;
  color: white;
  padding: 14px;
  font-size: 18px;
  border: none;
  border-radius: 30px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.signup-form .actions input[type="submit"]:hover {
  background-color: #91309c;
}

.signup-links {
  text-align: center;
  margin-top: 20px;
}

.signup-links a {
  color: #571f59;
  text-decoration: none;
  font-size: 14px;
}

.signup-links a:hover {
  text-decoration: underline;
}
</style>
